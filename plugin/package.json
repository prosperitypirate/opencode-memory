{
	"name": "codexfi",
	"version": "0.3.0",
	"description": "Persistent, semantic memory for AI coding agents â€” embedded LanceDB, zero Docker, one-command install",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"codexfi": "./dist/cli.js"
	},
	"scripts": {
		"spike": "bun run src/spike.ts",
		"prebuild": "rm -f dist/*.node",
		"build": "bun build src/index.ts --outdir dist --target node --external @lancedb/lancedb && bun build src/cli/index.ts --outdir dist --entry-naming cli.js --target node --external @lancedb/lancedb",
		"build:plugin": "bun build src/index.ts --outdir dist --target node --external @lancedb/lancedb",
		"build:cli": "bun build src/cli/index.ts --outdir dist --entry-naming cli.js --target node --external @lancedb/lancedb",
		"typecheck": "tsc --noEmit",
		"cli": "bun run src/cli/index.ts",
		"smoke:e2e": "bun run src/smoke-e2e.ts"
	},
	"dependencies": {
		"@lancedb/lancedb": "^0.15.0",
		"@opencode-ai/plugin": "^1.2.11",
		"@opencode-ai/sdk": "^1.2.11",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/bun": "^1.2.0",
		"typescript": "^5.7.0"
	},
	"keywords": [
		"opencode",
		"memory",
		"ai",
		"coding-agent",
		"lancedb",
		"persistent-memory",
		"plugin"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/prosperitypirate/codexfi.git",
		"directory": "plugin"
	},
	"homepage": "https://codexfi.com",
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"opencode": {
		"type": "plugin",
		"hooks": [
			"chat.message",
			"event"
		]
	},
	"files": [
		"dist"
	]
}
