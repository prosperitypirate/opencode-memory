{
  "name": "opencode-memory",
  "version": "0.1.0",
  "description": "OpenCode plugin for persistent memory using a self-hosted LanceDB + Voyage AI stack",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-memory": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/cli.ts --outfile ./dist/cli.js --target node && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "memory",
    "ai",
    "coding-agent",
    "self-hosted",
    "lancedb",
    "voyage"
  ],
  "author": "opencode-memory contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosperitypirate/opencode-memory"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162"
  },
  "devDependencies": {
    "@opencode-ai/sdk": "*",
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  },
  "opencode": {
    "type": "plugin",
    "hooks": [
      "chat.message",
      "event"
    ]
  },
  "files": [
    "dist"
  ]
}
